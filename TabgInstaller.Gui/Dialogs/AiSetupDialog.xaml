<Window x:Class="TabgInstaller.Gui.Dialogs.AiSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="🤖 AI Assistant Setup" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowState="Maximized"
        Background="#0a0f1c">
    <Window.Resources>
        <Style x:Key="OptionCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="#0a0f1c">
        <!-- Main Content -->
        <Grid Name="SelectionPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="20">
                <TextBlock Text="Welcome to TABG AI Assistant!" 
                          FontSize="28" FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Foreground="#cfe3ff"/>
                <TextBlock Text="Choose how you'd like to run the AI assistant" 
                          FontSize="16" 
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"
                          Foreground="#5a6aa8"/>
            </StackPanel>

            <!-- Options -->
            <Grid Grid.Row="1" Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Local AI Option -->
                <Border Grid.Column="0" Style="{StaticResource OptionCard}"
                        MouseLeftButtonDown="LocalOption_Click"
                        Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="🖥️" FontSize="48" HorizontalAlignment="Center" Foreground="#7aa2ff"/>
                        <TextBlock Text="Local AI" FontSize="24" FontWeight="Bold" 
                                  HorizontalAlignment="Center" Margin="0,10,0,5" Foreground="#cfe3ff"/>
                        <TextBlock Text="FREE • No Internet Required" 
                                  FontSize="14" FontWeight="Bold"
                                  HorizontalAlignment="Center" 
                                  Foreground="#00FFC6" Margin="0,0,0,10"/>
                        
                        <TextBlock TextWrapping="Wrap" Foreground="#666" Margin="0,10">
                            <Run>• Download AI models to your computer</Run><LineBreak/>
                            <Run>• Complete privacy - runs offline</Run><LineBreak/>
                            <Run>• No API costs or limits</Run><LineBreak/>
                            <Run>• Requires 14-65 GB disk space</Run><LineBreak/>
                            <Run>• Needs decent GPU for best performance</Run>
                        </TextBlock>
                        
                        <Border Background="#091126" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Available Models:" FontWeight="Bold" Foreground="#7aa2ff"/>
                                <TextBlock Text="• GPT-OSS 20B (13.8 GB)" Foreground="#9fb3ff" Margin="5,2,0,0"/>
                                <TextBlock Text="• GPT-OSS 120B (65.3 GB)" Foreground="#9fb3ff" Margin="5,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Online AI Option -->
                <Border Grid.Column="1" Style="{StaticResource OptionCard}"
                        MouseLeftButtonDown="OnlineOption_Click"
                        Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="☁️" FontSize="48" HorizontalAlignment="Center" Foreground="#7aa2ff"/>
                        <TextBlock Text="Online AI" FontSize="24" FontWeight="Bold" 
                                  HorizontalAlignment="Center" Margin="0,10,0,5" Foreground="#cfe3ff"/>
                        <TextBlock Text="API Key Required • Cloud-Based" 
                                  FontSize="14" FontWeight="Bold"
                                  HorizontalAlignment="Center" 
                                  Foreground="#ffb86b" Margin="0,0,0,10"/>
                        
                        <TextBlock TextWrapping="Wrap" Foreground="#666" Margin="0,10">
                            <Run>• Uses cloud AI services</Run><LineBreak/>
                            <Run>• No download required</Run><LineBreak/>
                            <Run>• Always latest models</Run><LineBreak/>
                            <Run>• Requires internet connection</Run><LineBreak/>
                            <Run>• Pay-per-use with API key</Run>
                        </TextBlock>
                        
                        <Border Background="#091126" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Supported Providers:" FontWeight="Bold" Foreground="#7aa2ff"/>
                                <TextBlock Text="• OpenAI (GPT-5, GPT-4, GPT-OSS)" Foreground="#9fb3ff" Margin="5,2,0,0"/>
                                <TextBlock Text="• Anthropic (Claude)" Foreground="#9fb3ff" Margin="5,2,0,0"/>
                                <TextBlock Text="• Google (Gemini)" Foreground="#9fb3ff" Margin="5,2,0,0"/>
                                <TextBlock Text="• xAI (Grok)" Foreground="#9fb3ff" Margin="5,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="I already have models installed" 
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0"
                        Click="ExistingModels_Click"/>
                <Button Content="Cancel" Width="100" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>

        <!-- Local AI Download Panel (Initially Hidden) -->
        <Grid Name="LocalDownloadPanel" Visibility="Collapsed" Background="#0a0f1c">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="20">
                <TextBlock Text="📥 Download Local AI Models" 
                          FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Foreground="#cfe3ff"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="20">
                <StackPanel>
                    <!-- Directory Selection -->
                    <Border Background="#091126" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Download Location:" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Name="ModelDirectoryTextBox" 
                                        Grid.Column="0"
                                        IsReadOnly="True"
                                        Padding="8"
                                        VerticalAlignment="Center"/>
                                <Button Grid.Column="1" 
                                       Content="Browse..." 
                                       Margin="10,0,0,0"
                                       Padding="10,5"
                                       Click="BrowseDirectory_Click"/>
                            </Grid>
                            <TextBlock Name="SpaceInfoText" 
                                      Margin="0,10,0,0"
                                      Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Model Selection -->
                    <TextBlock Text="Select Models to Download:" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <!-- Model Cards -->
                    <ItemsControl Name="ModelsList" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0d1426" 
                                       BorderBrush="#1f2a44" 
                                       BorderThickness="1"
                                       CornerRadius="5" 
                                       Padding="15" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,15,0"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                      FontWeight="Bold" 
                                                      FontSize="16" Foreground="#cfe3ff"/>
                                            <TextBlock Text="{Binding SizeText}" 
                                                      Foreground="#5a6aa8"
                                                      Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding StatusText}" 
                                                      Foreground="{Binding StatusColor}"
                                                      FontWeight="Bold"
                                                      Margin="0,5,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <ProgressBar Width="200" 
                                                        Height="20"
                                                        Value="{Binding DownloadProgress}"
                                                        Visibility="{Binding ProgressVisibility}"/>
                                            <TextBlock Text="{Binding ProgressText}"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,5,0,0"
                                                      Visibility="{Binding ProgressVisibility}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <Button Name="BackButton" Content="Back" Width="100" Margin="0,0,10,0" Click="Back_Click"/>
                <Button Name="DownloadButton" 
                       Content="Start Download" 
                       Style="{StaticResource PrimaryButton}"
                       Click="StartDownload_Click"/>
            </StackPanel>
        </Grid>

        <!-- Online API Setup Panel (Initially Hidden) -->
        <Grid Name="OnlineSetupPanel" Visibility="Collapsed" Background="#0a0f1c">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="20">
                <TextBlock Text="🔑 API Key Configuration" 
                          FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Foreground="#cfe3ff"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="40,20">
                <Label Content="Select Provider:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox Name="ProviderComboBox" Margin="0,0,0,20"
                         SelectionChanged="ProviderComboBox_SelectionChanged">
                    <ComboBoxItem Content="OpenAI (GPT-5, GPT-4, GPT-OSS)" Tag="OpenAI"/>
                    <ComboBoxItem Content="Anthropic (Claude)" Tag="Anthropic"/>
                    <ComboBoxItem Content="Google (Gemini)" Tag="Google"/>
                    <ComboBoxItem Content="xAI (Grok)" Tag="xAI"/>
                </ComboBox>

                <Label Content="API Key:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox Name="ApiKeyBox" Margin="0,0,0,10" 
                           PasswordChanged="ApiKeyBox_PasswordChanged"
                           FontSize="14"
                           Padding="8"/>

                <TextBlock Name="HelpText" TextWrapping="Wrap" Margin="0,0,0,20"
                          Foreground="#666">
                    <Run>Get your API key from platform.openai.com</Run>
                </TextBlock>

                <TextBlock Name="ValidationMessage" TextWrapping="Wrap" 
                          FontWeight="Bold"
                          Visibility="Collapsed"/>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <Button Content="Back" Width="100" Margin="0,0,10,0" Click="Back_Click"/>
                <Button Name="SaveApiKeyButton" 
                       Content="Save &amp; Continue" 
                       Style="{StaticResource PrimaryButton}"
                       IsEnabled="False"
                       Click="SaveApiKey_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
