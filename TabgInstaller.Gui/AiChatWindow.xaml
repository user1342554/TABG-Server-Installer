<Window x:Class="TabgInstaller.Gui.AiChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TabgInstaller.Gui.Converters"
        mc:Ignorable="d"
        Title="🤖 TABG AI Assistant" Height="800" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushBg}"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="False">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="Fill" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsConnected}" Value="False">
                    <Setter Property="Fill" Value="#F44336"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- STARSHIP HEADER BAR -->
        <Border Grid.Row="0" Background="{StaticResource BrushPanel}" BorderBrush="#1f2a44" BorderThickness="0,0,0,1" MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <Grid Margin="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Name="StatusIndicator" Width="12" Height="12" Fill="#00FFC6" Margin="0,0,10,0">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="1" To="0.3" Duration="0:0:1"
                                                       AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <TextBlock Name="StatusText" Text="Connected" Foreground="#9fb3ff" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Center Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Model: " Foreground="#5a6aa8" Margin="0,0,5,0"/>
                    <TextBlock Name="ModelNameText" Text="GPT-OSS 120B" Foreground="#7aa2ff" FontWeight="Bold"/>
                    <TextBlock Text=" | " Foreground="#5a6aa8" Margin="10,0"/>
                    <TextBlock Text="Mode: " Foreground="#5a6aa8" Margin="0,0,5,0"/>
                    <TextBlock Name="ModeText" Text="Local" Foreground="#00FFC6" FontWeight="Bold"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="🔄" ToolTip="Clear Chat" Width="35" Height="35"
                           Style="{StaticResource ModernButton}"
                           FontSize="18"
                           Margin="0,0,5,0"
                           Click="ClearChat_Click"/>
                    <Button Content="⚙️" ToolTip="Settings" Width="35" Height="35"
                           Style="{StaticResource ModernButton}"
                           FontSize="18"
                           Click="Settings_Click"/>
                </StackPanel>
                <!-- System Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="—" ToolTip="Minimize" Width="35" Height="35" Style="{StaticResource ModernButton}" Click="Minimize_Click"/>
                    <Button Content="✕" ToolTip="Close" Width="35" Height="35" Style="{StaticResource ModernButton}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- STARSHIP VIEWPORT -->
        <ScrollViewer Grid.Row="1" Name="ChatScrollViewer"
                     VerticalScrollBarVisibility="Auto"
                     Background="{StaticResource BrushBg}"
                     ScrollChanged="ChatScrollViewer_ScrollChanged">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar">
                    <Setter Property="Background" Value="#0d1426"/>
                    <Setter Property="Width" Value="12"/>
                </Style>
            </ScrollViewer.Resources>
            
            <ItemsControl Name="ChatMessages" Margin="20,10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar for Assistant Messages -->
                            <Border Grid.Column="0" 
                                   Width="35" Height="35" 
                                   CornerRadius="20"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Top"
                                   Visibility="{Binding ShowAvatar, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#203a82" Offset="0"/>
                                        <GradientStop Color="#1b2c62" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="{Binding AvatarText}" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Foreground="White"
                                          FontWeight="Bold"
                                          FontSize="16"/>
                            </Border>

                            <!-- Message Bubble -->
                                    <Border Grid.Column="{Binding BubbleColumn}"
                                   Style="{Binding BubbleStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Role Header -->
                                    <TextBlock Grid.Row="0" 
                                              Text="{Binding Role}" 
                                              FontWeight="Bold" 
                                              FontSize="12"
                                              Foreground="{Binding RoleColor}" 
                                              Margin="0,0,0,5"/>
                                    
                                    <!-- Message Content with Markdown Support -->
                                    <TextBlock Grid.Row="1" 
                                              Text="{Binding Content}" 
                                              TextWrapping="Wrap"
                                               Foreground="#cfe3ff"
                                              FontSize="14"
                                              LineHeight="20"/>
                                    
                                    <!-- Timestamp -->
                                    <TextBlock Grid.Row="2" 
                                              Text="{Binding Timestamp}" 
                                              FontSize="10"
                                              Foreground="#808080"
                                              HorizontalAlignment="Right"
                                              Margin="0,5,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Copy Button -->
                            <Button Grid.Column="2" 
                                   Content="📋" 
                                   Width="25" Height="25"
                                   VerticalAlignment="Top"
                                   Margin="5,0,0,0"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   ToolTip="Copy message"
                                   Click="CopyMessage_Click"
                                   Tag="{Binding Content}"
                                   Visibility="{Binding ShowCopyButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- STARSHIP TYPING INDICATOR -->
        <Border Grid.Row="2" Background="{StaticResource BrushPanel}" Padding="10,5"
               Name="TypingIndicator" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="AI is thinking" Foreground="#5a6aa8" Margin="0,0,10,0"/>
                <Grid>
                    <Ellipse Width="8" Height="8" Fill="#7aa2ff" Margin="0,0,5,0">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0" To="1" Duration="0:0:0.5"
                                                       BeginTime="0:0:0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="#7aa2ff" Margin="15,0,5,0">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0" To="1" Duration="0:0:0.5"
                                                       BeginTime="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="#7aa2ff" Margin="30,0,5,0">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0" To="1" Duration="0:0:0.5"
                                                       BeginTime="0:0:0.4"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>
            </StackPanel>
        </Border>

        <!-- STARSHIP COMMAND LINE -->
        <Border Grid.Row="3" Background="{StaticResource BrushPanel}" BorderBrush="#1f2a44" BorderThickness="0,1,0,0">
            <Grid Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                       Background="#091126"
                       CornerRadius="10"
                       BorderBrush="#1f2a44"
                       BorderThickness="1">
                    <Grid>
                        <TextBox Name="UserInput" 
                                Background="Transparent"
                                Foreground="#cfe3ff"
                                FontSize="14"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                Padding="15,10"
                                KeyDown="UserInput_KeyDown"/>
                        <TextBlock Text="Type your message here... (Ctrl+Enter to send)"
                                  Foreground="#44508a"
                                  FontStyle="Italic"
                                  Margin="15,10"
                                  IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=UserInput}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <Button Grid.Column="1" 
                       Name="SendButton"
                       Content="Send 🚀" 
                       Width="100"
                       Height="40"
                       Margin="10,0,0,0"
                       Style="{StaticResource ModernButton}"
                       Click="SendButton_Click"/>
            </Grid>
        </Border>
        
        <!-- SETUP OVERLAY (Single-window setup) -->
        <Grid Name="SetupOverlay" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#660a0f1c" Offset="0"/>
                    <GradientStop Color="#990a0f1c" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top bar -->
                <TextBlock Grid.Row="0" Text="AI Assistant Setup" Foreground="#cfe3ff" FontSize="24" FontWeight="Bold"/>

                <!-- Content Panels replicated from setup dialog -->
                <Grid Grid.Row="1" Name="InlineSetupRoot">
                    <Grid Name="SelectionPanel" Background="#0a0f1c">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="20">
                            <TextBlock Text="Choose how you'd like to run the AI assistant" 
                                      FontSize="16" 
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"
                                      Foreground="#5a6aa8"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Local AI Option -->
                            <Border Grid.Column="0" CornerRadius="10" BorderBrush="#1f2a44" BorderThickness="1" Background="#0d1426"
                                    MouseLeftButtonDown="LocalOption_Click" Cursor="Hand" Margin="10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="🖥️ Local AI" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#cfe3ff"/>
                                    <TextBlock Text="Free • No internet required" HorizontalAlignment="Center" Foreground="#00FFC6"/>
                                </StackPanel>
                            </Border>

                            <!-- Online AI Option -->
                            <Border Grid.Column="1" CornerRadius="10" BorderBrush="#1f2a44" BorderThickness="1" Background="#0d1426"
                                    MouseLeftButtonDown="OnlineOption_Click" Cursor="Hand" Margin="10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="☁️ Online AI" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#cfe3ff"/>
                                    <TextBlock Text="API key required • Cloud" HorizontalAlignment="Center" Foreground="#ffb86b"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="Use Installed Model" Margin="0,0,10,0" Click="UseInstalledModel_Click"/>
                            <Button Content="Cancel" Width="100" Click="CancelSetup_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Local Download Panel -->
                    <Grid Name="LocalDownloadPanel" Visibility="Collapsed" Background="#0a0f1c">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="20">
                            <TextBlock Text="📥 Download Local AI Models" FontSize="20" FontWeight="Bold" Foreground="#cfe3ff"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" Margin="20">
                            <StackPanel>
                                <Border Background="#091126" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="Download Location:" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Name="ModelDirectoryTextBox" Grid.Column="0" IsReadOnly="True" Padding="8"/>
                                            <Button Grid.Column="1" Content="Browse..." Margin="10,0,0,0" Padding="10,5" Click="BrowseDirectory_Click"/>
                                        </Grid>
                                        <TextBlock Name="SpaceInfoText" Margin="0,10,0,0" Foreground="#666"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Select Models to Download:" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl Name="ModelsList" Margin="0,0,0,20">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#0d1426" BorderBrush="#1f2a44" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="16" Foreground="#cfe3ff"/>
                                                        <TextBlock Text="{Binding SizeText}" Foreground="#5a6aa8" Margin="0,5,0,0"/>
                                                        <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}" FontWeight="Bold" Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <ProgressBar Width="200" Height="20" Value="{Binding DownloadProgress}" Visibility="{Binding ProgressVisibility}"/>
                                                        <TextBlock Text="{Binding ProgressText}" HorizontalAlignment="Center" Margin="0,5,0,0" Visibility="{Binding ProgressVisibility}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                            <Button Content="Back" Width="100" Margin="0,0,10,0" Click="Back_Click"/>
                            <Button Name="DownloadButton" Content="Start Download" Click="StartDownload_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Online Setup Panel -->
                    <Grid Name="OnlineSetupPanel" Visibility="Collapsed" Background="#0a0f1c">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="20">
                            <TextBlock Text="🔑 API Key Configuration" FontSize="20" FontWeight="Bold" Foreground="#cfe3ff"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="40,20">
                            <Label Content="Select Provider:" FontWeight="Bold"/>
                            <ComboBox Name="ProviderComboBox" Margin="0,0,0,20" SelectionChanged="ProviderComboBox_SelectionChanged">
                                <ComboBoxItem Content="OpenAI (GPT-5, GPT-4, GPT-OSS)" Tag="OpenAI"/>
                                <ComboBoxItem Content="Anthropic (Claude)" Tag="Anthropic"/>
                                <ComboBoxItem Content="Google (Gemini)" Tag="Google"/>
                                <ComboBoxItem Content="xAI (Grok)" Tag="xAI"/>
                            </ComboBox>

                            <Label Content="API Key:" FontWeight="Bold"/>
                            <PasswordBox Name="ApiKeyBox" Margin="0,0,0,10" PasswordChanged="ApiKeyBox_PasswordChanged"/>
                            <TextBlock Name="HelpText" TextWrapping="Wrap" Margin="0,0,0,20" Foreground="#5a6aa8"/>
                            <TextBlock Name="ValidationMessage" TextWrapping="Wrap" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                            <Button Content="Back" Width="100" Margin="0,0,10,0" Click="Back_Click"/>
                            <Button Name="SaveApiKeyButton" Content="Save &amp; Continue" IsEnabled="False" Click="SaveApiKey_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>