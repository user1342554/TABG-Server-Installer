<UserControl x:Class="TabgInstaller.Gui.Tabs.BackupsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top" Margin="8">
            <TextBlock Text="Backups" FontSize="16" FontWeight="Bold" Margin="0,0,0,4"/>
            <TextBlock Text="Manage server backups" Margin="0,0,0,8"/>
        </StackPanel>

        <!-- Bottom Actions -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="8" HorizontalAlignment="Right">
            <Button Content="Refresh" Width="80" Margin="0,0,8,0" Click="RefreshBackups_Click"/>
            <Button Content="Create Backup" Width="100" Click="CreateBackup_Click"/>
        </StackPanel>

        <!-- Backup List -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8">
            <StackPanel x:Name="BackupsList">
                <TextBlock x:Name="NoBackupsMessage" Text="No backups found" 
                           HorizontalAlignment="Center" Margin="0,20,0,0" Visibility="Visible"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
