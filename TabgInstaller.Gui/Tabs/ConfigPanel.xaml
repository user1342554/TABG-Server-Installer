<UserControl x:Class="TabgInstaller.Gui.Tabs.ConfigPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TabgInstaller.Gui.Tabs">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Quick Actions -->
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
            <Button Content="Hard Reset" Margin="2" Click="HardReset_Click"/>
            <Button Content="Open Server Folder" Margin="2" Click="OpenServerFolder_Click"/>
            <Button Content="Open Logs" Margin="2" Click="OpenLogs_Click"/>
            <Button Content="Open Config Files" Margin="2" Click="OpenConfigs_Click"/>
            <Button Content="Quick-save &amp; Restart" Margin="2" Click="QuickSaveRestart_Click"/>
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Server Settings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <local:GameSettingsGrid Grid.Row="0"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <Button Content="Save" Width="100" Click="SaveButton_Click"/>
                        <Button Content="Open in Notepad" Width="140" Margin="5,0,0,0" Click="OpenGameSettings_Click"/>
                        <TextBlock Name="StatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Plugins">
                <StackPanel Margin="5">
                    <Label Content="Installed plugins (BepInEx/plugins):"/>
                    <ListView x:Name="LstPlugins" Height="280" SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}" Checked="PluginToggle" Unchecked="PluginToggle"/>
                                    <TextBlock Text="{Binding Name}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Add DLL..." Width="100" Click="AddPlugin_Click"/>
                        <Button Content="Remove Selected" Width="120" Margin="5,0,0,0" Click="RemovePlugin_Click"/>
                        <Button Content="Open Folder" Width="100" Margin="5,0,0,0" Click="OpenPluginsFolder_Click"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Presets">
                <local:PresetsGrid x:Name="PresetsGridControl"/>
            </TabItem>

            <TabItem Header="Console">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button x:Name="StartButton" Content="Start Server" Width="100" Margin="2" Click="StartButton_Click"/>
                        <Button x:Name="StopButton" Content="Stop Server" Width="100" Margin="2" Click="StopButton_Click" IsEnabled="False"/>
                        <Button Content="Clear Console" Width="100" Margin="2" Click="ClearConsole_Click"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" x:Name="ConsoleScrollViewer">
                        <TextBox x:Name="ConsoleTextBox" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas"/>
                    </ScrollViewer>
                    
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtCommand" Grid.Column="0" KeyDown="TxtCommand_KeyDown"/>
                        <Button Content="Send" Grid.Column="1" Width="60" Margin="5,0,0,0" Click="SendCommand_Click"/>
                    </Grid>
                </Grid>
            </TabItem>

            
        </TabControl>
    </Grid>
</UserControl>