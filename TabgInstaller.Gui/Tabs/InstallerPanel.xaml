<UserControl x:Class="TabgInstaller.Gui.Tabs.InstallerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Path -->
        <GroupBox Grid.Row="0" Header="Server Path" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="PathBox" Grid.Column="0" Margin="5"/>
                <Button x:Name="BrowseButton" Content="Browse" Grid.Column="1" Width="80" Margin="5" Click="Browse_Click"/>
            </Grid>
        </GroupBox>

        <!-- Server Config -->
        <GroupBox Grid.Row="1" Header="Server Configuration" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Server Name:"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="TxtServerName" IsEditable="True" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Password:"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="TxtServerPassword" IsEditable="True" Margin="5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Public:"/>
                <CheckBox Grid.Row="2" Grid.Column="1" x:Name="ChkPublicServer" VerticalAlignment="Center" Margin="5"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Description:"/>
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="TxtServerDescription" IsEditable="True" Margin="5"/>
            </Grid>
        </GroupBox>

        <!-- Plugins -->
        <GroupBox Grid.Row="2" Header="Plugins" Margin="0,0,0,10">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="CitrusLib Tag:" Grid.Column="0"/>
                    <TextBox x:Name="TxtCitrusTag" Text="v0.7" Grid.Column="1" Margin="5"/>
                    <CheckBox x:Name="ChkSkipCitruslib" Content="Skip" Grid.Column="2" Margin="5"/>
                </Grid>
                <CheckBox x:Name="ChkInstallCommunityServer" Content="Install TABGCommunityServer" Margin="5"/>
            </StackPanel>
        </GroupBox>

        <!-- Log -->
        <GroupBox Grid.Row="3" Header="Installation Log">
            <ScrollViewer x:Name="LogScrollViewer">
                <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="BtnInstall" Content="INSTALL" Height="40" Width="140" Click="BtnInstall_Click"/>
            <Button x:Name="BtnContinue" Content="Continue without install" Height="40" Width="200" Margin="10,0,0,0" Click="BtnContinue_Click"/>
        </StackPanel>
    </Grid>
</UserControl>