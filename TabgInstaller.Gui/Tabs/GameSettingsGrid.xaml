<UserControl x:Class="TabgInstaller.Gui.Tabs.GameSettingsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TabgInstaller.Gui.ViewModels"
             xmlns:conv="clr-namespace:TabgInstaller.Gui.Converters"
             xmlns:converters="clr-namespace:TabgInstaller.Gui.Converters"
             mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BoolToVisibilityConverter x:Key="NotBoolToVis" Inverse="True"/>
        <converters:SettingToTooltipConverter x:Key="SettingToTooltip" />
        <converters:ControlTypeVisibilityConverter x:Key="ControlTypeToVis" />
        <converters:FloatConverter x:Key="FloatConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Advanced Settings Toggle removed per user request to avoid crashes -->
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Game Mode Warning -->
                <Border Background="Orange" Padding="10" Margin="5" 
                        Visibility="{Binding ShowGameModeWarning, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding GameModeWarningText}" 
                               Foreground="White" FontWeight="Bold" TextWrapping="Wrap"/>
                </Border>

                <ItemsControl ItemsSource="{Binding Properties}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:SettingPropertyVM}">
                            <Grid Margin="2" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" 
                                           ToolTip="{Binding Name, Converter={StaticResource SettingToTooltip}}"/>
                                
                                <!-- CheckBox for booleans -->
                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding BoolValue, Mode=TwoWay}"
                                          Visibility="{Binding ControlType, Converter={StaticResource ControlTypeToVis}, 
                                                       ConverterParameter=CheckBox}"/>
                                
                                <!-- ComboBox for dropdowns -->
                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding ComboBoxItems}"
                                          Text="{Binding ValueString, Mode=TwoWay}"
                                          IsEditable="True"
                                          Visibility="{Binding ControlType, Converter={StaticResource ControlTypeToVis}, 
                                                       ConverterParameter=ComboBox}"/>
                                
                                <!-- Slider for percentages -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal"
                                            Visibility="{Binding ControlType, Converter={StaticResource ControlTypeToVis}, 
                                                         ConverterParameter=Slider}">
                                    <Slider Width="150" 
                                            Minimum="{Binding SliderMinimum}" 
                                            Maximum="{Binding SliderMaximum}"
                                            Value="{Binding ValueString, Mode=TwoWay, 
                                                    Converter={StaticResource FloatConverter}}"
                                            TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding ValueString}" Margin="5,0" VerticalAlignment="Center" Width="40"/>
                                </StackPanel>
                                
                                <!-- NumericUpDown for numbers -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal"
                                            Visibility="{Binding ControlType, Converter={StaticResource ControlTypeToVis}, 
                                                         ConverterParameter=NumericUpDown}">
                                    <TextBox Width="100" 
                                             Text="{Binding ValueString, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                                    <TextBlock Text="{Binding NumericMinimum, StringFormat='(Min: {0})'}" 
                                               Margin="5,0" VerticalAlignment="Center" Foreground="Gray" FontSize="10"/>
                                    <TextBlock Text="{Binding NumericMaximum, StringFormat='Max: {0})'}" 
                                               VerticalAlignment="Center" Foreground="Gray" FontSize="10"/>
                                </StackPanel>
                                
                                <!-- TextBox for everything else -->
                                <TextBox Grid.Column="1"
                                         Text="{Binding ValueString, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                         Visibility="{Binding ControlType, Converter={StaticResource ControlTypeToVis}, 
                                                      ConverterParameter=TextBox}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 