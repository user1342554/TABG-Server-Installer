<UserControl x:Class="TabgInstaller.Gui.Tabs.SuperSecretSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Unloaded="UserControl_Unloaded">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="This is password protected. Enter password to enter:" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Password:" Width="100"/>
                <PasswordBox x:Name="PwdBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="EnterButton" Content="Enter" Width="100" Click="EnterButton_Click"/>
                <Button x:Name="StopButton" Content="Force Stop" Width="100" Margin="10,0,0,0" Click="StopButton_Click" Visibility="Collapsed"/>
            </StackPanel>
            <TextBlock x:Name="ErrorText" Margin="0,8,0,0" Foreground="Red"/>
            <TextBlock x:Name="InfoText" Margin="0,4,0,0" Foreground="Blue" FontSize="11"/>
            <TextBlock x:Name="DebugText" Margin="0,4,0,0" Foreground="Gray" FontSize="10"/>
        </StackPanel>
    </Grid>
</UserControl>


