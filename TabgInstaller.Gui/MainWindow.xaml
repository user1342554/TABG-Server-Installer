<Window x:Class="TabgInstaller.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tabs="clr-namespace:TabgInstaller.Gui.Tabs"
        Title="TABG Manager" Height="800" Width="1200">
    
    <TabControl>
        <TabItem Header="Installer">
            <tabs:InstallerPanel x:Name="InstallerTab"/>
        </TabItem>
        
        <TabItem Header="Config">
            <tabs:ConfigPanel x:Name="ConfigTab"/>
        </TabItem>
        
        <TabItem Header="AI Chat">
            <tabs:AiChatPanel x:Name="AiChatTab"/>
        </TabItem>
    </TabControl>
</Window>