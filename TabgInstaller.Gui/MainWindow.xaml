<Window x:Class="TabgInstaller.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tabs="clr-namespace:TabgInstaller.Gui.Tabs"
        Title="TABG Manager" Height="800" Width="1200"
        Icon="pack://application:,,,/Assets/tabg-mod-manager-icon-256.png">
    
    <Grid>
        <!-- Tab Control -->
        <TabControl x:Name="MainTabs">
            <TabItem Header="Installer">
                <tabs:InstallerPanel x:Name="InstallerTab"/>
            </TabItem>
            
            <TabItem Header="Config" x:Name="ConfigTabItem" IsEnabled="False">
                <tabs:ConfigPanel x:Name="ConfigTab"/>
            </TabItem>
            
            <TabItem Header="AI Chat" x:Name="AiChatTab" IsEnabled="False">
                <tabs:AiChatPanel/>
            </TabItem>
            <TabItem Header="Backups" x:Name="BackupsTab" IsEnabled="False">
                <tabs:BackupsPanel/>
            </TabItem>
            <TabItem Header="Super Secret Settings" x:Name="SuperSecretTab" IsEnabled="False">
                <tabs:SuperSecretSettingsPanel/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>