<Page x:Class="StarterPackSetup.ManageRings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StarterPackSetup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageRings">

    <Grid>
        <ScrollViewer>
            <ListView Name="RingListView">

            </ListView>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Name="BackBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Back" Margin="10,10,10,10" Width="35" Click="BackBtn_Click"/>
            <Button Name="DeleteLoadoutBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Delete Ring" Margin="10,10,10,10" Width="90" Click="DeleteBtn_Click"/>
            <Button Name="SaveBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Save Changes" Margin="10,10,10,10" Width="90" Click="SaveBtn_Click"/>
        </StackPanel>

    </Grid>
</Page>
