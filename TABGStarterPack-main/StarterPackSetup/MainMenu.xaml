<Page x:Class="StarterPackSetup.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StarterPackSetup"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
      Title="MainMenu">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Starter Pack Configuration" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Made by Contagiously Stupid" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" Height="200">
            <Button Name="BtnMap" Content="Map Config" Click="BtnMap_Click" Height="40"/>
            <Button Name="BtnRespawn" Content="Respawn Config" Click="BtnRespawn_Click" VerticalAlignment="Bottom" Height="40"/>
            <Button Name="BtnLoadout" Content="Loadout Config" Click="BtnLoadout_Click" VerticalAlignment="Bottom" Height="40"/>
            <Button Name="BtnLobby" Content="Lobby Config" Click="BtnLobby_Click" VerticalAlignment="Bottom" Height="40"/>
            <Button Name="BtnMatch" Content="Match Config" Click="BtnMatch_Click" VerticalAlignment="Bottom" Height="40"/>
        </StackPanel>
    </Grid>
</Page>
